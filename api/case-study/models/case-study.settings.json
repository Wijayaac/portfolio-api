{
  "kind": "collectionType",
  "collectionName": "case_studies",
  "info": {
    "name": "case study",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "sub": {
      "type": "text",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "stacks": {
      "type": "component",
      "repeatable": true,
      "component": "collection.stack",
      "required": true
    },
    "create": {
      "type": "date",
      "required": true
    },
    "publication": {
      "type": "string",
      "required": true
    }
  }
}
